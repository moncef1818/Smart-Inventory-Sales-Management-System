<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>


<AnchorPane prefHeight="300" prefWidth="400" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RegisterController">
   <VBox alignment="CENTER" layoutX="28.0" layoutY="33.0" prefHeight="239.0" prefWidth="360.0" spacing="15.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
      <children>
           <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Register" />
         <TextField fx:id="usernameField" promptText="Username" />
      
                 <TextField fx:id="emailField" promptText="Email" />
           <PasswordField fx:id="passwordField" promptText="Password" />
         <PasswordField fx:id="passwordConfirmField" layoutX="10.0" layoutY="137.0" promptText="Confirm Password" />
      
                 <Button onAction="#handleRegister" text="Register" />
           <Hyperlink onAction="#goToLogin" text="You already have an Account? Login" />
      </children>
   </VBox>
</AnchorPane>
